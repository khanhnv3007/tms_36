<header class="navbar navbar-fixed-top navbar-custom">
  <div class="container">
    <%= link_to t("tms_36"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.header.home"), root_path %></li>
        <% if logged_in? && supervisor? %>
          <li><%= link_to t("layouts.header.all"), users_path %></li>
          <li><%= link_to t("buttons.create"),
            new_supervisors_user_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"),
                supervisors_user_path(current_user) %></li>
              <li><%= link_to t("layouts.header.setting"),
                edit_supervisors_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.logout"),
                  logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% elsif logged_in? && !supervisor? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.setting"),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.logout"),
                  logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
