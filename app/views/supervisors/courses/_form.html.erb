<%= form_for [:supervisors, @course] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.fields_for :user_courses, @course.user_courses.build do |builder| %>
    <% builder.hidden_field :user_id,
      value: current_user.id unless @course.users.include?(current_user) %>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :status %>
  <%= f.select :status, options_for_select(Course.statuses.map{|k, v| [k, k]}),
    class: "form-control" %></br>

  <%= f.label :start_date %></br>
  <%= f.date_select :start_date, class: "date-select" %></br>

  <%= f.label :end_date %></br>
  <%= f.date_select :end_date, class: "date-select" %>

  <%= hidden_field_tag :activity, "update" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
