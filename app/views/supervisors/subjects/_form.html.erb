<%= form_for [:supervisors, @subject] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :status %>
  <%= f.select :status, options_for_select(Subject.statuses.map{|k, v| [k, k]},
    f.object.status), class: "form-control" %></br>

  <%= f.label :start_date %></br>
  <%= f.date_select :start_date, class: "date-select" %></br>

  <%= f.label :end_date %></br>
  <%= f.date_select :end_date, class: "date-select" %>

  <h2><%= t "subjects.tasks"  %></h2>

  <%= f.fields_for :tasks do |t| %>
    <%= render "task_fields", f: t %>
  <% end %>
  <%= link_to_add_fields t("buttons.new_task"), f, :tasks %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
