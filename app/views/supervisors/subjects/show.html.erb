<%= provide :title, @subject.name %>
<div class="row">
  <h1><%= @subject.name %></h1>
  <div class="list-group">
    <%= render @subject.tasks if @subject.tasks.any? %>
  </div>
  <hr/>
  <strong><%= t "subjects.start_date" %></strong>
  <%= @subject.start_date %><br/>
  <strong><%= t "subjects.end_date" %></strong>
  <%= @subject.end_date %><br/>
  <strong><%= t "subjects.status" %></strong>
  <%= @course_subject.nil? ? @subject.status : @course_subject.status %><br/>
  <hr/>
  <strong><%= t "subjects.description" %></strong>
  <div><%= @subject.description %></div>
  <div id="finish_subject" class="row text-center">
    <%= render "finish_form" unless @course_subject.nil? %>
  </div>
</div>
