<div class="row">
  <div>
    <%= form_for @course, url: supervisors_course_path(@course,
      activity: "update_course_subject") do |f| %>
      <h1><%= t "courses.add_subject_to_course" %></h1>
      <table class="table">
        <%= f.fields_for :course_subjects do |builder| %>
          <tr>
            <td class="text-info">
              <%= link_to builder.object.subject.name, "" %></b>
            </td>
            <td>
              <% if @course.subjects.include?(builder.object.subject) %>
                <%= builder.check_box :_destroy, {checked: true}, 0, 1 %>
              <% else %>
                <%= builder.check_box :subject_id,
                  {checked: false}, builder.object.subject_id, nil %>
                <%= builder.hidden_field :status, value: :started %>
              <% end %>
            </td>
          </tr>
          <%= will_paginate @subjects %>
        <% end %>
      </table>
      <div class="actions">
        <%= f.submit t("buttons.submit"), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
