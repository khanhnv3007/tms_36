<div class="row">
  <div class="col-md-8">
    <%= form_for @course, url: supervisors_course_path(@course) do |f| %>
      <%= hidden_field_tag "course[user_ids][]" %>
      <h1><%= t "courses.add_trainee_to_course" %></h1>
        <table class="table">
          <% @users.each do |user| %>
            <tr>
              <td class="text-info">
                <%= link_to user.name, user_path(user) %></b>
              </td>
              <td>
                <%= f.check_box :user_ids, {name: "course[user_ids][]",
                  checked: @course.users.include?(user)}, user.id, nil %>
              </td>
            </tr>
          <% end %>
          <%= will_paginate @users %>
        </table>
      <div class="actions">
        <%= f.submit t("buttons.submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
